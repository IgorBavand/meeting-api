# ==============================================================================
# Railway Environment Variables Template
# ==============================================================================
# Copy this file and set these variables in Railway dashboard
# ==============================================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WEBHOOK_URL=https://your-railway-app.railway.app/webhooks/twilio/room-ended
TWILIO_SIGNATURE_VALIDATION=false

# Gemini AI
GEMINI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GEMINI_MODEL=gemini-2.0-flash

# Whisper (pre-configured in Dockerfile, usually don't need to change)
WHISPER_MODE=local
WHISPER_PATH=/usr/local/bin/whisper-cli
WHISPER_MODEL=small
WHISPER_LANGUAGE=pt
WHISPER_THREADS=2
WHISPER_MODELS_PATH=/app/models

# FFmpeg (pre-configured in Dockerfile)
FFMPEG_PATH=/usr/bin/ffmpeg

# Java Options (adjust based on Railway plan)
JAVA_OPTS=-Xmx512m -Xms256m
